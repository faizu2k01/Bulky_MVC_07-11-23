@model Company



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-primary">
                   @(Model.Id==0?"Create":"Update") Company
                </h1>

            </div>

        </div>
       

    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12">
                    <div class="border p-4">
                        <div class="text-danger class="m-0 p-0" asp-validation-summary="All"></div>
                        <input hidden asp-for="@Model.Id" />

                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Name" class="form-control border-0 shadow" type="text" />
                            <label asp-for="@Model.Name" class="ms-2"></label>
                        </div>
                        
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.StreetAddress" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.StreetAddress" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.PhoneNumber" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.PhoneNumber" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.PostalCode" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.PostalCode" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.City" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.City" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.State" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.State" class="ms-2"></label>
                        </div>
                       
                        <div class="mt-4 p-0 row">
                            <div class="col-6 col-md-3">
                                @if (Model.Id == 0 || Model.Id == null)
                                {
                                    <button class="btn btn-primary form-control" type="submit">Create</button>
                                }
                                else
                                {
                                    <button class="btn btn-primary form-control" type="submit">Update</button>

                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a class="btn btn-outline-primary form-control" asp-controller="Company" asp-action="Index">Go Back</a>
                            </div>
                        </div>
                        


                    </div>
                </div>
            </div>
           </form>

    </div>

</div>

    


    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial"/>
        }
    }

